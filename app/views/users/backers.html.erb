				                    <% end %>
					                <br />
			                 		
			                    </div>
			                </div>
			                <!-- END SIDEBAR USER TITLE -->
			            </div>
			        </div>
		<% end %>
		<div class="clearfix"></div>
	<% end %>
	<div class="text-center"><%= paginate @users %></div>
  </div>
  <div class="clearfix"></div>
</div>