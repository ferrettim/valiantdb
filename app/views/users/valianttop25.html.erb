<div align="center">
  <div class="col-md-12 col-sm-12 col-xs-12">
  	<h2 class="white text-center">Top 25 Valiant Collections</h2>
	<% if user_signed_in? %>
			<% @users.each do |u| %>
				<div class="col-md-3 col-sm-4 col-xs-12">
		            <div class="profile-sidebar2">
		                <!-- SIDEBAR USERPIC -->
		                <div class="profile-userpic">
		                	<div class="place pull-right">
			                	
						    </div>
		                    <% if u.avatar.blank? %>
		                        <img src="https://s3.amazonaws.com/valiantdb/images/noimg-med.png" class="img-responsive">
		                    <% else %>
		                        <%= image_tag u.avatar.url(:medium), :alt => "Profile image", class: "img-responsive" %>
		                    <% end %>
		                </div>
		                <!-- END SIDEBAR USERPIC -->
		                <!-- SIDEBAR USER TITLE -->
		                <div class="profile-usertitle">
		                    <div class="profile-usertitle-name">
		                    	<div class="text-center">
			                    	<% if u.online? %>
										<div class="online-button">
											<button class="btn btn-success btn-circle btn-sm" title="Online">&nbsp;</button>
										</div>
									<% else %>
										<div>
											&nbsp;
										</div>
									<% end %>
								</div>
		                        <%= link_to root_url + "users/" + u.slug + "/profile", :title => "See profile" do %>
		                        	<small><%= u.name %></small> 
		                        <% end %>
			                    <% if u.patron? %>
			                        <%= link_to "http://www.patreon.com/comicark", :title => "I'm a patron, are you?", :target => "_blank" do %><%= image_tag "https://s3.amazonaws.com/valiantdb/images/patreonbadge.png", height: "12px" %><% end %>
			                    <% end %>
		                        <br />
		                        <small>Owns <%= u.owned_books.where(:publisher => ["Valiant Entertainment", "Voyager Communications", "Acclaim Entertainment"]).count %> <% if u.owned_books.where(:publisher => ["Valiant Entertainment", "Voyager Communications", "Acclaim Entertainment"]).count == 1 %>book<% else %>books<% end %></small>
		                        <br />
		                        <small>Joined <%= u.created_at.strftime("%B %d, %Y") %></small>
		                    </div>
		                </div>
		                <!-- END SIDEBAR USER TITLE -->
		            </div>
		        </div>
			<% end %>
	<% else %>
		<h2 class="text-center">Oh, oh, you're not supposed to be here!</h2>
		<h3 class="text-center">Head <%= link_to "back home", root_path %>, I won't tell anyone you were here.</h3>
	<% end %>
  </div>
  <div class="clearfix"></div>
</div>