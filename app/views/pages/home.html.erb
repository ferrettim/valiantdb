<% if user_signed_in? %>
<% else %>
<div id="landingpg">
    <!-- Header -->
    <a name="about"></a>
    <div class="intro-header">
        <div class="container">

            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-message">
                        <h1>ComicArk</h1>
                        <% if Date.today == Date.today.beginning_of_week + 2.day %>
                            <h2>It's new comic book day!</h2>
                        <% elsif Date.today < Date.today.beginning_of_week + 2.day %>
                            <h2 class="homeh2">Only <%= ((Date.today.beginning_of_week + 2.day) - (Date.today)).to_i %> days until new comic book day!</small></h2>
                        <% else %>
                            <h2 class="homeh2">Only <%= ((Date.today.beginning_of_week + 9.day) - (Date.today)).to_i %> days until new comic book day!</small></h2>
                        <% end %>
                        <hr class="intro-divider gone">
                        <div class="btn-group">
                            <%= link_to new_user_registration_path, :class => "btn btn-default", :method => :get do %>
                                <i class="fa fa-user-plus fa-fw"></i>
                                <span class="network-name">Register</span><% end %>
                            <%= link_to new_user_session_path, :class => "btn btn-primary", :method => :get do %>
                                <i class="fa fa-sign-in fa-fw"></i>
                                <span class="network-name"> Login Now!</span><% end %>
                        </div>


                    </div>
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.intro-header -->

    <!-- Page Content -->
    <div class="col-md-12 col-sm-12 col-xs-12">
        <br />
    	<div class="col-md-4 col-sm-4 col-xs-12">
            <%= image_tag "https://s3.amazonaws.com/valiantdb/images/landing/info.jpg", class: "img-responsive", :alt => "Info" %>
            <p class="lead">Get information including creative teams, sales numbers, pricing data (soon!), variant and reprint information, solicitations, and more!</p>
        </div>
        <div class="col-md-4 col-sm-4 col-xs-12">
            <%= image_tag "https://s3.amazonaws.com/valiantdb/images/landing/collection.jpg", class: "img-responsive", :alt => "Collection" %>
            <p class="lead">Create a free account to start tracking your collection and wishlist from many popular publishers and more coming soon.</p>
        </div>
        <div class="col-md-4 col-sm-4 col-xs-12">
            <%= image_tag "https://s3.amazonaws.com/valiantdb/images/landing/devices.jpg", class: "img-responsive", :alt => "Mobile" %>
            <p class="lead">The site is optimized for all your devices so you can get the information you need, no matter where you need to access it.</p>
        </div>
    </div>
    <!-- /.banner -->
</div>
<% end %>
