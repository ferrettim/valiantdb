<%= form_for :conversation, url: :conversations, html: { class: "" } do |f| %>
    <div class="form-group">
      <% if params[:user].present? %>
        <%= f.label :recipients, 'Sending to ' %>
        <%= f.select(:recipients, User.all.collect {|p| [ p.name, p.id ] }, { :selected => @user.id }, { multiple: true, class: "form-control chosen-select" }) %>
      <% else %>
        <%= f.label :recipients %>
        <%= f.select(:recipients, User.all.collect {|p| [ p.name, p.id ] }, {}, { multiple: true, class: "chosen-select form-control" }) %>
      <% end %>
    </div>
    <div class="form-group">
      <% if params[:subject].present? %>
        <%= f.label :subject %>
        <%= f.text_field :subject, value: params[:subject], class: "form-control" %>
      <% else %>
        <%= f.label :subject %>
        <%= f.text_field :subject, placeholder: "Subject", class: "form-control" %>
      <% end %>
    </div>
    <div class="form-group">
      <% if params[:body].present? %>
        <%= f.text_area :body, class: 'form-control', rows: 4, value: params[:body] %>
      <% else %>
        <%= f.label :message %>
        <%= f.text_area :body, class: 'form-control', placeholder: "Type your message here", rows: 4  %>
      <% end %>
    </div>

    <%= f.submit "Send Message", class: "btn btn-default col-md-12" %>

<% end %>
