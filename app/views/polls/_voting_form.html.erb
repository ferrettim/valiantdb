<br />
<%= form_tag pollvotes_path, method: :post, remote: true, id: 'voting_form' do %>
  <%= hidden_field_tag 'poll[id]', @poll.id %>

  <%= render partial: 'polls/vote_option', collection: @poll.pollvote_options, as: :option %>
  <h4><strong>Total votes: <%= @poll.votes_summary %></strong></h4>
  <% if current_user.pollvoted_for?(@poll) %>
    <h4>You have already voted!</h4>
    <span class="pull-right"><%= link_to "Go home", root_url, class: "btn btn-default" %></span>
  <% else %>
    <p>Participating in polls can earn you points! <%= link_to "Learn more", userlevels_path %> about how to earn points and join the <%= link_to "leaderboard", users_leaderboard_path %>.</p>
    <%= submit_tag 'Submit My Vote!', class: 'btn btn-lg btn-primary' %>
  <% end %>
<% end %>
