<%= simple_form_for @poll do |f| %>
  <%= render 'errors', object: @poll %>

  <div class="form-group">
    <%= f.input :topic, rows: 2, required: true, class: 'form-control' %>
    <%= f.input :image1 %>
    <%= f.input :image2 %>
    <%= f.input :image3 %>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">Options</div>
    <div class="panel-body">
      <%= f.fields_for :pollvote_options do |options_form| %>
        <%= render 'pollvote_option_fields', f: options_form %>
      <% end %>

      <div class="links">
        <%= link_to_add_association 'add option', f, :pollvote_options %>
      </div>
    </div>
  </div>
  <%= f.submit 'Create', class: 'btn btn-primary btn-lg' %>
<% end %>
