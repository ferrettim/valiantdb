<div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1 col-xs-12">
	<br />
  	<%= image_tag "https://s3.amazonaws.com/valiantdb/images/valiantdatabasecom.jpg", :alt => "ComicArk", class: "divfill" %>
	<div class="wellclear bottomcorners">
		<div class="container-fluid">
			<p>If you can't remember your password you can enter your email address below to receive a message with instructions to reset your password.</p>
			<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			  <%= f.error_notification %>
			  <div class="form-inputs">
			    <%= f.input :email, required: true, autofocus: true, placeholder: "Enter your e-mail address", label: false %>
			  </div>

			  <div class="pull-right">
			    <%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary" %>
			  </div>
			<% end %>
			<div class="clearfix"></div>
		</div>
	</div>
</div>
