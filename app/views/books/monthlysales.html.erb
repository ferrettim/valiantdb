<div class="wellclear">
	<h3 class="text-center"><%= @pgtitle %></h3>
	<p>Latest sales numbers available are for <a href="http://www.comicark.com/sales/monthly?utf8=%E2%9C%93&date=04-2016">April 2016</a></p>
		<table class="table table-responsive table-striped">
			<thead>
				<tr>
					<td><strong>Image</strong></td>
					<td><strong>Title</strong></td>
					<td><strong>Release Date</strong></td>
					<td><strong>Price</strong></td>
					<td><strong>Publisher</strong></td>
					<td class="pull-right"><strong>Estimated Sales</strong></td>
				</tr>
			</thead>
			<tbody>
				<% @booksales.each do |t| %>
					<tr>
						<td><%= link_to t, :title => t.title.to_s + " #" + t.issue.to_s do %><%= image_tag t.image.url(:mini), class: "img-responsive" %><% end %></td>
						<td><%= link_to t, :title => t.title.to_s + " #" + t.issue.to_s do %><%= t.title.to_s + " #" + t.issue.to_s %><% end %></td>
						<td><%= t.rdate.strftime("%B %d, %Y") %></td>
						<td>$<%= t.price_in_dollars.to_s %></td>
						<td><%= t.publisher.to_s %></td>
						<td class="pull-right"><%= t.printrun.to_s %> copies</td>
					</tr>
				<% end %>
			</tbody>
		</table>
</div>