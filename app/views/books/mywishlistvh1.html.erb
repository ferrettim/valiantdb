<div class="content transitions-enabled container-fluid wellclear">
  <h3 class="text-center">
      <% if @user == current_user %>
        <% if params[:query].present? %>
          Wishlist Results <span class="label label-default label-as-badge"><%= current_user.wished_books.where(:title => params[:query]).count %></span>
        <% else %>
          <span class="btn btn-success btn-xs">
            <% if action_name == "mybooks" %>
              <%= link_to root_url + "users/" + current_user.id.to_s + "/wishlist.csv", :title => "Export wishlist" do %>
                  <span class="white fa fa-download"></span>
                <% end %>
            <% elsif action_name == "mybooksvei" %>
              <%= link_to root_url + "users/" + current_user.id.to_s + "/current-wishlist.csv", :title => "Export Current Valiant wishlist" do %>
                  <span class="white fa fa-download"></span>
                <% end %>
            <% elsif action_name == "mybooksvh1" %>
              <%= link_to root_url + "users/" + current_user.id.to_s + "/classic-wishlist.csv", :title => "Export Classic Valiant wishlist" do %>
                  <span class="white fa fa-download"></span>
                <% end %>
            <% elsif action_name == "mybooksvh2" %>
              <%= link_to root_url + "users/" + current_user.id.to_s + "/acclaim-wishlist.csv", :title => "Export Acclaim wishlist" do %>
                  <span class="white fa fa-download"></span>
                <% end %>
            <% end %>
          </span>
          My Classic Wishlist <% if user_signed_in? && current_user.patron? %><small>$<%= '%.2f' % ((current_user.wished_books.where(:era => "VH1").sum :pricenm) / 100.00) %></small><% end %> <% if user_signed_in? && current_user.illuminati? %><small>$<%= '%.2f' % ((current_user.wished_books.sum :pricenm) / 100.00) %></small><% end %>
        <% end %>
      <% else %>
        <%= @user.name %>'s VH1 Wishlist <span class="label label-default label-as-badge"><%= @bookvh1.count %></span>
        <br />
      <% end %>
    </h3>
    <div class="clearfix"></div>
    
    <%= render "bookwishes" %>
  
  <div class="clearfix"></div>
</div>