<%= simple_form_for [@book, @book.comments.build], remote: true do |f| %>
	<%= f.input :content, placeholder: "Add your own notes to this book", class: "form-control col-md-12 col-sm-12 col-xs-12 tinymce", :rows => "5", :id => "comment_content_#{@book.id}" %>
	<ul class="list-inline">
		<li><%= f.input :grade, collection: ["Mint", "Near Mint", "Very Fine", "Fine", "Very Good", "Good", "Fair", "Poor", "Imcomplete"], include_blank: true, class: "form-control col-md-4 col-sm-4 col-xs-12", label: "Condition" %></li>
		<li><%= f.input :cgcgrade, collection: ["10", "9.9", "9.8", "9.7", "9.6", "9.5", "9.4", "9.3", "9.2", "9.1", "9.0",
																						"8.9", "8.8", "8.7", "8.6", "8.5", "8.4", "8.3", "8.2", "8.1", "8.0",
																						"7.9", "7.8", "7.7", "7.6", "7.5", "7.4", "7.3", "7.2", "7.1", "7.0",
																						"6.9", "6.8", "6.7", "6.6", "6.5", "6.4", "6.3", "6.2", "6.1", "6.0", ">5.9"
																						], include_blank: true, class: "form-control col-md-4 col-sm-4 col-xs-12", label: "Grading"  %></li>
		<li><%= f.input :grader, collection: ["CGC", "CBCS", "PGX"], include_blank: true, class: "form-control col-md-4 col-sm-4 col-xs-12", label: "Graded by"  %></li>
		<li><%= f.input :signature, class: "form-control col-md-6 col-sm-12 col-xs-12", label: "Signed?" %></li>

	</ul>
	<%= f.button :submit, "Save Note", class: "btn btn-primary" %>
<% end %>
